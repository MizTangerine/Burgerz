<form class="create" autocomplete="off">
    <input type="text" id="newBurger" placeholder="New Burger">
    <button type="submit" id="add">Name It</button>
</form>

<p>Named</p>
<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        {{this.burger_name}}
        <button type="submit" class='devour' data-id="{{this.id}}">Devour</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<p>Devoured</p>
<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>