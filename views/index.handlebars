<form class="create" autocomplete="off">
    <input type="text" id="newBurger" placeholder="New Burger" pattern="^[^-\s][a-zA-Z0-9_\s-]{1,}$"
        title="Please submit a name." required>
    <button type="submit" id="add">Name It</button>
</form>

<div class="container">
    <div class="named">
        <h3>To Be Devoured</h3>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.burger_name}}
                <button type="submit" class='devour' data-id="{{this.id}}"><img src="/assets/img/buger_button.gif"
                        alt="simple"></button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="devoured">
        <h3>Already Devoured</h3>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>